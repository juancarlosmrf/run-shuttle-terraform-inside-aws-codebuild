{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "A codebuild Shuttle system running terraform ",
    "Parameters": {
        "TheDataPartName": {
            "Default": "thedataname",
            "Description": "The data part name as will appear in the cloudformation stack name",
            "Type": "String"
        }
    },
    "Resources": {
        "TheAdminrole": {
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Statement": [
                        {
                            "Action": [
                                "sts:AssumeRole"
                            ],
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "codebuild.amazonaws.com"
                                ]
                            }
                        }
                    ],
                    "Version": "2012-10-17"
                },
                "Path": "/",
                "Policies": [
                    {
                        "PolicyDocument": {
                            "Statement": [
                                {
                                    "Action": "*",
                                    "Effect": "Allow",
                                    "Resource": "*"
                                }
                            ],
                            "Version": "2012-10-17"
                        },
                        "PolicyName": "adminaccess-policy"
                    }
                ],
                "RoleName": {
                    "Fn::Join": [
                        ".",
                        [
                            {
                                "Ref": "AWS::StackName"
                            },
                            {
                                "Ref": "AWS::Region"
                            },
                            "codebuild-role"
                        ]
                    ]
                }
            },
            "Type": "AWS::IAM::Role"
        },
        "BuildProject": {
            "Properties": {
                "Artifacts": {
                    "Type": "no_artifacts"
                },
                "Description": "Build the Shuttle part for code using Terraform",
                "Environment": {
                    "ComputeType": "BUILD_GENERAL1_SMALL",
                    "EnvironmentVariables": [
                        {
                            "Name": "datapart",
                            "Value": {
                                "Ref": "TheDataPartName"
                            }
                        },
                        {
                            "Name": "region",
                            "Value": {
                                "Ref": "AWS::Region"
                            }
                        },
                        {
                            "Name": "applicationname",
                            "Value": {
                                "Ref": "AWS::StackName"
                            }
                        },
                        {
                            "Name": "destroy",
                            "Value": "False"
                        }
                    ],
                    "Image": "aws/codebuild/python:2.7.12",
                    "Type": "LINUX_CONTAINER"
                },
                "Name": {
                    "Fn::Join": [
                        "_",
                        [
                            {
                                "Ref": "AWS::StackName"
                            },
                            {
                                "Ref": "AWS::Region"
                            },
                            "build_Shuttle_App"
                        ]
                    ]
                },
                "ServiceRole": {
                    "Ref": "TheAdminrole"
                },
                "Source": {
                    "Location": "https://github.com/juancarlosmrf/run-shuttle-terraform-inside-aws-codebuild",
                    "Type": "GITHUB"
                },
                "Tags": [
                    {
                        "Key": "Project",
                        "Value": "Run Shuttle From CodeBuild (Terraform)"
                    }
                ],
                "TimeoutInMinutes": 10
            },
            "Type": "AWS::CodeBuild::Project"
        },
        "S3StateAndSoftware": {
            "Properties": {
                "BucketName": {
                    "Fn::Join": [
                        ".",
                        [
                            {
                                "Ref": "TheDataPartName"
                            },
                            {
                                "Ref": "AWS::Region"
                            },
                            "terraform-state-software"
                        ]
                    ]
                }
            },
            "Type": "AWS::S3::Bucket"
        }
    }
}

